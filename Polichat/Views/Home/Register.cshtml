@model Polichat.Models.User

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12" style="padding-bottom: 100px;">
        <!-- Material form login -->
        <div class="card">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong>Регистрация</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                {
                    <!-- Form -->
                    <form class="text-center needs-validation" style="color: #757575;">
                        <div class="md-form">
                            <label for="surname">Email <span class="must-have">*</span></label>
                            <input type="text" class="form-control" id="Email" name="Email" placeholder="Email" value=""
                                   required pattern="[a-z0-9]+([-+._][a-z0-9]+){0,2}@("@").*?(\.(a(?:[cdefgilmnoqrstuwxz]|ero|(?:rp|si)a)|b(?:[abdefghijmnorstvwyz]iz)|c(?:[acdfghiklmnoruvxyz]|at|o(?:m|op))|d[ejkmoz]|e(?:[ceghrstu]|du)|f[ijkmor]|g(?:[abdefghilmnpqrstuwy]|ov)|h[kmnrtu]|i(?:[delmnoqrst]|n(?:fo|t))|j(?:[emop]|obs)|k[eghimnprwyz]|l[abcikrstuvy]|m(?:[acdeghklmnopqrstuvwxyz]|il|obi|useum)|n(?:[acefgilopruz]|ame|et)|o(?:m|rg)|p(?:[aefghklmnrstwy]|ro)|qa|r[eosuw]|s[abcdeghijklmnortuvyz]|t(?:[cdfghjklmnoprtvwz]|(?:rav)?el)|u[agkmsyz]|v[aceginu]|w[fs]|y[etu]|z[amw])\b){1,2}">
                            <div class="valid-feedback">
                                ОК
                            </div>
                        </div>
                        <div class="md-form">
                            <label for="name">Логин <span class="must-have">*</span></label>
                            <input type="text" class="form-control" name="Login" placeholder="Логин" value=""
                                   required pattern="^(?=.*[A-Za-z0-9]$)[A-Za-z][A-Za-z\d.-]{0,19}$">
                            <div class="valid-feedback">
                                ОК
                            </div>
                        </div>
                        <div class="md-form">
                            <label for="surname">Пароль <span class="must-have">*</span></label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Пароль" value=""
                                   required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{6,}$">
                            <div class="valid-feedback">
                                ОК
                            </div>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Зарегистрироваться</button>

                        <!-- Register -->
                        <p>
                            Уже зарегистрированы?
                            <a href="/Home/Login">Войти</a>
                        </p>
                    </form>
                    <!-- Form -->
                }
            </div>

        </div>
        <!-- Material form login -->
    </div>
</center>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            $('.datepicker').pickadate({

                min: new Date(1937, 3, 20),
                max: new Date(2017, 7, 14),
                selectYears: 80
            });
        }, false);
    })();
</script>