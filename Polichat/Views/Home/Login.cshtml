@model IEnumerable<Polichat.Models.User>

@{
    ViewBag.Title = "Авторизация";


    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12" style="padding-bottom: 100px;">
        <!-- Material form login -->
        <div class="card">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong>Вход</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <!-- Form -->
                    <form class="text-center needs-validation" style="color: #757575;">
                        <div class="md-form">
                            <label for="name">Логин <span class="must-have">*</span></label>
                            <input type="text" class="form-control" name="Login" placeholder="Логин" value=""
                                   required>
                            <div class="valid-feedback">
                                ОК
                            </div>
                        </div>
                        <div class="md-form">
                            <label for="surname">Пароль <span class="must-have">*</span></label>
                            <input type="password" class="form-control" id="surname" name="Password" placeholder="Пароль" value=""
                                   required>
                            <div class="valid-feedback">
                                ОК
                            </div>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Войти</button>

                        <!-- Register -->
                        <p>
                            Нет аккаунта?
                            <a href="/Home/Register">Зарегистрироваться</a>
                        </p>
                    </form>
                    <!-- Form -->
                }
            </div>

        </div>
        <!-- Material form login -->
    </div>
</center>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>